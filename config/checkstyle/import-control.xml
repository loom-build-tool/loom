<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE import-control PUBLIC "-//Puppy Crawl//DTD Import Control 1.1//EN" "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">
<import-control pkg="builders.loom">

    <allow pkg="java.beans"/>
    <allow pkg="java.io"/>
    <allow pkg="java.lang"/>
    <allow pkg="java.net"/>
    <allow pkg="java.nio"/>
    <allow pkg="java.math"/>
    <allow pkg="java.security"/>
    <allow pkg="java.text"/>
    <allow pkg="java.time"/>
    <allow pkg="java.util"/>

    <allow pkg="javax.tools"/>
    <allow pkg="javax.xml"/>

    <allow pkg="org.w3c"/>
    <allow pkg="org.xml"/>
    <allow pkg="org.slf4j"/>
    <allow pkg="org.w3c.dom"/>
    <allow pkg="org.xml.sax"/>
    <allow pkg="org.junit"/>

    <allow pkg="builders.loom"/>

    <subpackage name="cli">
        <allow pkg="org.fusesource.jansi"/>
        <allow pkg="org.apache.commons.cli"/>
    </subpackage>

    <subpackage name="core">
        <allow pkg="org.yaml.snakeyaml"/>
    </subpackage>

    <subpackage name="plugin.maven">
        <allow pkg="org.apache.maven"/>
        <allow pkg="org.sonatype.aether"/>
    </subpackage>

    <subpackage name="plugin.java">
        <allow pkg="org.objectweb.asm"/>
    </subpackage>

    <subpackage name="plugin.checkstyle">
        <allow pkg="com.puppycrawl.tools"/>
    </subpackage>

    <subpackage name="plugin.spotbugs">
        <allow pkg="edu.umd.cs.findbugs"/>
    </subpackage>

    <subpackage name="plugin.pmd">
        <allow pkg="net.sourceforge.pmd"/>
    </subpackage>

    <subpackage name="plugin.springboot">
        <allow pkg="javassist.bytecode"/>
    </subpackage>

</import-control>
